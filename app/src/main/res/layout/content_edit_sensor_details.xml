<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.bitsg.sensoraggregator.EditSensorDetails"
    tools:showIn="@layout/activity_edit_sensor_details">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/sensor_name_text_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"

        android:paddingEnd="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingStart="16dp"
        android:weightSum="1">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/sensor_name_editText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.92"

            android:ems="10"

            android:hint="Sensor Name"
            android:inputType="textPersonName"
            android:text=""
            android:textColor="@android:color/black"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/sensor_type_text_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sensor_name_text_input"
        android:layout_marginTop="16dp"

        android:paddingEnd="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingStart="16dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/sensor_type_editText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:hint="Sensor Type"

            android:text=""
            android:textColor="@android:color/black"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/sensor_region_text_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sensor_type_text_input"
        android:layout_marginTop="16dp"
        android:paddingEnd="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingStart="16dp"

        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/sensor_region_editText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Sensor Region"
            android:text=""
            android:textColor="@android:color/black"/>
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/sensor_ub_text_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sensor_region_text_input"
        android:layout_marginTop="8dp"
        android:paddingEnd="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingStart="16dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/sensor_ub_editText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Sensor Upper Bound"
            android:text=""
            android:textColor="@android:color/black"/>

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/sensor_lb_text_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sensor_ub_text_input"
        android:layout_marginTop="8dp"
        android:paddingEnd="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingStart="16dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/sensor_lb_editText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Sensor Lower Bound"
            android:text=""
            android:textColor="@android:color/black"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/sensor_edit_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sensor_lb_text_input"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_background"
        android:text="DONE"
        android:textSize="16sp"
        android:textStyle="bold"/>


</RelativeLayout>

